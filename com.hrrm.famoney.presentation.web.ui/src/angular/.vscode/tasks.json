{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [{
      "label": "build dev",
      "type": "shell",
      "command": "ng",
      "windows": {
        "command": "ng"
      },
      "args": [
        "build",
        "--configuration=development",
        "--watch"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true
      },
      "problemMatcher": [
        "$tsc-watch"
      ]
    },
    {
      "label": "build prod",
      "type": "shell",
      "command": "ng",
      "windows": {
        "command": "ng"
      },
      "args": [
        "build",
        "--watch",
        "--configuration=production"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true
      },
      "problemMatcher": [
        "$tsc-watch"
      ]
    },
    {
      "label": "serve",
      "type": "shell",
      "command": "ng",
      "windows": {
        "command": "ng"
      },
      "args": [
        "serve"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true
      },
      "problemMatcher": [
        "$tsc-watch"
      ]
    }

  ]
}
